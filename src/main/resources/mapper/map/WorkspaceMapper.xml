<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nju.software.storymapping.map.dao.WorkspaceMapper">

    <insert id="insert" parameterType="cn.edu.nju.software.storymapping.map.entity.Workspace"
            useGeneratedKeys="true" keyProperty="id">
		insert into
		work_space(name,user_id,description,create_time)
		values
		(#{name},#{userId},#{description},#{createTime})
	</insert>

    <delete id="delete" parameterType="_int">
		delete from work_space where id=#{id}	
	</delete>

    <update id="update" parameterType="cn.edu.nju.software.storymapping.map.entity.Workspace">
		update work_space set
		name=#{name},
		user_id=#{userId},
		description=#{description},
		create_time=#{createTime},		
	</update>

    <select id="getById" parameterType="_int" resultType="cn.edu.nju.software.storymapping.map.entity.Workspace">
		select *
		from
		work_space where id= #{id}
	</select>

    <select id="listAll" resultType="cn.edu.nju.software.storymapping.map.entity.Workspace">
		select * from work_space
	</select>

    <select id="listByUserId" parameterType="_int" resultType="cn.edu.nju.software.storymapping.map.entity.Workspace">
		select * from work_space where user_id= #{id}
	</select>

</mapper>